@{
    var X = Html.X();
}

@(X.Container()
    .LayoutConfig(new VBoxLayoutConfig
    {
        Pack = BoxPack.Center,
        Align = BoxAlign.Stretch
    })
    .Items(
        X.Container()
            .Flex(1)
            .LayoutConfig(new HBoxLayoutConfig { Align = BoxAlign.Center })
            .Defaults(new
            {
                flex = 1,
                margin = 10
            })
            .Items(
                X.Button()
                    .Text("Normal")
                    .Handler("Ext.toast('User tapped Normal', 500);"),

                X.Button()
                    .Text("Round")
                    .UI(ButtonUI.Round)
                    .Handler("Ext.toast('User tapped Round', 500);"),

                X.Button()
                    .Text("Small")
                    .UIName("small")
                    .Handler("Ext.toast('User tapped Small', 500);")
            ),

        X.Container()
            .Flex(1)
            .LayoutConfig(new HBoxLayoutConfig { Align = BoxAlign.Center })
            .Defaults(new
            {
                flex = 1,
                margin = 10
            })
            .Items(
                X.Button()
                    .Text("Action")
