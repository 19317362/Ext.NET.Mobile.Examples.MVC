@{
    var X = Html.X();
}

@(
    X.FormPanel()
        .Scrollable(ScrollableOption.Both)
        .Defaults(
            X.Parameter()
                .Name("labelWidth")
                .Value("35%"),
            X.Parameter()
                .Name("labelAlign")
                .Value("top")
        )
        .Items(
            X.Slider()
                .Name("thumb")
                .Number(20)
                .Label("Single Thumb"),
            X.Slider()
                .Name("disthumb")
                .Number(30)
                .Disabled(true)
                .Label("Disabled Single Thumb"),
            X.Slider()
                .Name("multithumb")
                .Numbers(new double[] { 10, 70 })
                .Label("Multiple Thumbs"),
            X.ToggleField()
                .Name("toggle")
                .Label("Toggle")
        )
)
